                <imageHeader>
                    <image insets="720, 0, 0, 0" required="true">http://__LOCALIP__:5050/Gradienttv/fullgradient.php?image={{IMAGEURL(art:::)}}&amp;gradient=tvseason&amp;hd=1080</image>
