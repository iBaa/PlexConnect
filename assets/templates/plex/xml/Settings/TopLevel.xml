<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
    <itemCollectionWithImageHeader id="SettingsPage_VideoOSD">
      <header>
        <imageHeader>
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=552|1080=828)}}, 0" required="true">
            {{URL(:/fanartcache/{{getBackground({{EVAL({\
              'template' : "plex",\
              'title' : "{{EVAL(quote_plus("{{TEXT(Settings)}}"))}}",\
              'subtitle' : "{{EVAL(quote_plus("{{TEXT(Navigation Bar Options)}}"))}}",\
              'image' : "backgrounds/plex{{VAL($plex_menubackground::Grey=default|Plex Orange=orange|Apple Blue=blue|Green=green)}}.png",\
              'resolution' : "{{VAL(^aTVScreenResolution)}}",\
              'font' : "fonts/OpenSans/OpenSans-Light.ttf",\
              'titleColor' : "{{VAL($plex_titlecolor::White=fafafa|Grey=878787|Plex Orange=ff8800|Apple Blue=1357d4)}}",\
              'subtitleColor' : "{{VAL($plex_subtitlecolor::White=fafafa|Grey=878787|Plex Orange=ff8800|Apple Blue=1357d4)}}",\
              'layers' : ["PlexSubList{{VAL($plex_listtint::On=Text|Off=)}}"{{VAL($plex_menuhint::On=,"PlexPressMenu_{{VAL($plex_subtitlecolor::White=white|Plex Orange=orange|Apple Blue=blue|Grey=grey)}}"|Off=)}}]\
            })}})}})}}
          </image>
        </imageHeader>
      </header>
      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary/>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
<label>{{TEXT(Designer)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
<label>WahlmanJ</label>
            <label>Baa, roidy</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexconnect</label>
            <label>http://forums.plexapp.com/...plexconnect</label>
          </metadataValues>
          <image>{{URL(:/templates/plex/images/PlexConnectLogo.png)}}</image>
        </keyedPreview>
      </preview>

      <menu>
        <sections>
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Navigation Bar)}}</title>
              </horizontalDivider>
            </header>
            <items>
            <oneLineMenuItem id="StartTab" onSelect="toggleSettings('StartTab', 'Settings/TopLevel')">
                <label>{{TEXT(Default Tab)}}</label>
                <rightLabel>{{SETTING(starttab)}}</rightLabel>
              </oneLineMenuItem>
              
              <oneLineMenuItem id="plex_ShowPlayLists" onSelect="toggleSettings('plex_ShowPlayLists', 'Settings/TopLevel')">
                <label>{{TEXT(Show Playlists)}}</label>
                <rightLabel>{{SETTING(plex_showplaylists)}}</rightLabel>
              </oneLineMenuItem>
              
              <oneLineMenuItem id="plex_ShowSharedLibrarys" onSelect="toggleSettings('plex_ShowSharedLibrarys', 'Settings/TopLevel')">
                <label>{{TEXT(Show Shared Librarys)}}</label>
                <rightLabel>{{SETTING(plex_showsharedlibrarys)}}</rightLabel>
              </oneLineMenuItem>
            </items>
          </menuSection>
          
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
