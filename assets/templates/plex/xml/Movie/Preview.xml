<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

  <body>
    <preview>
      <scrollerPreview id="com.sample.moreInfoPreview">
        <header>
          <metadataHeader>
            <title>{{VAL(title2)}}</title>
            <subtitle>{{VAL(size)}} {{TEXT(Movies)}}</subtitle>
          </metadataHeader>
        </header>
        <items>
          <grid id="grid_0" columnCount="5">
            <items>
              <fourByThreePoster id="{{VAL(key)}}" featured="true" alwaysShowTitles="true"
                           onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play::{{VAL(ratingKey)}}')"
                           onSelect="atv.loadURL('{{URL(key)}}?includeExtras=1&amp;PlexConnect=MoviePrePlay')">
                {{COPY(Video)}}
                <title>{{VAL(title)}}</title>
                <subtitle>{{VAL(year:&#x00AD;)}}</subtitle>
                <image>{{IMAGEURL(thumb::384)}}</image>
                <defaultImage>resource://16X9.png</defaultImage>
              </fourByThreePoster>
            </items>
          </grid>
        </items>
      </scrollerPreview>
    </preview>
  </body>
</atv>
