<?xml version="1.0" encoding="UTF-8"?>
<atv>
	<head>
		<script src="{{URL(:/js/settings.js)}}" />
	</head>

	<body>
		<optionList id="Settings_Language">
			<title>{{TEXT(Language)}}</title>
			<items>
				<oneLineMenuItem id="en" onSelect="setSettings('Language', 'en');atv.unloadPage();">
					<label>English</label>
				</oneLineMenuItem>
				<oneLineMenuItem id="zh_TW" onSelect="setSettings('Language', 'zh_TW');atv.unloadPage();">
					<label>繁體中文</label>
				</oneLineMenuItem>
			</items>
		</optionList>
	</body>
</atv>
