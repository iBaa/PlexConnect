    <script src="{{URL(:/js/settings.js)}}" />
  </head>
 
  <body>
    {{ADDXML(OnDeck::/library/onDeck)}}      
    {{ADDXML(RecentlyAdded::/library/recentlyAdded)}}    
    {{VAR(items:NoKey:FALSE)}}
    {{ADDXML(VideoChannels::/video)}}
    {{ADDXML(AudioChannels::/music)}}
    {{ADDXML(PhotoChannels::/photos)}}
    {{VAR(sections:NoKey:FALSE)}}  <!--this sets the var to FALSE-->
 
    <scroller volatile="true"  id="com.sample.movie-showcase-grid">
        <header>
            <imageHeader>
                <image insets="50, 0, 0, 0" required="true">{{URL(:/thumbnails/header{{VAL(^aTVScreenResolution)}}.png)}}</image>
            </imageHeader>
        </header>
        <items>
        
