<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>
  
  <body>
    <listWithPreview id="com.sample.menu-items-with-sections">
    {{CUT(size:CUT:0=CUT|1=)}}
      <header>
        <simpleHeader>
          <title>{{VAL(title1:Plex Library)}}</title>
          <subtitle>{{VAL(title2)}}</subtitle>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              
              <!-- Directory -->
              <!-- viewgroup="secondary" -->
              <!-- content="", "secondary", "items" -->
              <oneLineMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}')" 
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <!--
                <rightLabel>another 100 files...</rightLabel>
                -->
                <!--<image>{{IMAGEURL(thumb)}}</image>-->
                <!--<image>http://trailers.apple.com/thumbnails/DirectoryLink.jpg</image>-->
                <!--<defaultImage>resource://Poster.png</defaultImage>-->
                <preview>
                  <crossFadePreview>
                    <image>{{BIGIMAGEURL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
              
              <!-- Artist -->
              <!-- viewgroup="secondary" -->
              <!-- content="artists" -->
              <oneLineMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}')" 
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Artist)}}
                <label>{{VAL(artist)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{BIGIMAGEURL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
              
              <!-- Album -->
              <!-- viewgroup=missing, "album" -->
              <!-- content="albums" -->
              <oneLineMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}')" 
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Album)}}
                <label>{{VAL(label)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{BIGIMAGEURL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
              
              <!-- Playlist -->
              <!-- viewgroup="playlist" -->
              <!-- content="playlists" -->
              <oneLineMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}')" 
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Playlist)}}
                <label>{{VAL(title)}}</label>
                <rightLabel>{{VAL(count)}}</rightLabel>
                <preview>
                  <crossFadePreview>
                    <image>{{BIGIMAGEURL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
              
              <!-- Genre -->
              <!-- viewgroup="genre" -->
              <!-- content="genres" -->
              <oneLineMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}')" 
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Genre)}}
                <label>{{VAL(genre)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{BIGIMAGEURL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
              
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
    
    <!--No Items Available-->
    <dialog id="com.sample.error-dialog">
    {{CUT(size::0=|1=CUT)}}
      <title>PlexConnect</title>
      <description>Plex Media Server: No Items Available</description>
    </dialog>
  </body>
</atv>