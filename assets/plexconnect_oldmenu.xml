<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="http://trailers.apple.com/utils.js" />
  </head>
  
 	<body>
		<scroller id="com.sample.movie-shelf">
			<items>
				<shelf id="shelf_1" columnCount="4">
					<sections>
						<shelfSection>
							<items>
								<squarePoster id="Library"
									featured="true"
									onSelect="atv.loadURL('http://trailers.apple.com/library/sections');"
									onPlay="atv.loadURL('http://trailers.apple.com/library/sections');">
									<title>Library</title>
									<image>http://trailers.apple.com/thumbnails/Library.jpg</image>
									<defaultImage>resource://Poster.png</defaultImage>
								</squarePoster>

								<squarePoster id="Channels"
									featured="true"
									onSelect="atv.loadURL('http://trailers.apple.com/channels/all&amp;PlexConnect=Channels');"
									onPlay="atv.loadURL('http://trailers.apple.com/channels/all&amp;PlexConnect=Channels');">
									<title>Channels</title>
									<image>http://trailers.apple.com/thumbnails/Channels.jpg</image>
									<defaultImage>resource://Poster.png</defaultImage>
								</squarePoster>

								<squarePoster id="Search"
									featured="true"
									onSelect="atv.loadURL('http://trailers.apple.com/search.xml');"
									onPlay="atv.loadURL('http://trailers.apple.com/search.xml');">
									<title>Search</title>
									<image>http://trailers.apple.com/thumbnails/Search.jpg</image>
									<defaultImage>resource://Poster.png</defaultImage>
								</squarePoster>
								
								<!--squarePoster id="MyPlex"
									featured="true"
									onSelect="atv.loadURL('http://trailers.apple.com/...');"
									onPlay="atv.loadURL('http://trailers.apple.com/...');">
									<title>MyPlex</title>
									<image>http://trailers.apple.com/thumbnails/....jpg</image>
									<defaultImage>resource://Poster.png</defaultImage>
								</squarePoster-->

								<squarePoster id="Settings"
									featured="true"
									onSelect="atv.loadURL('http://trailers.apple.com/&amp;PlexConnect=Settings');"
									onPlay="atv.loadURL('http://trailers.apple.com/&amp;PlexConnect=Settings');">
									<title>Settings</title>
									<image>http://trailers.apple.com/thumbnails/Settings.jpg</image>
									<defaultImage>resource://Poster.png</defaultImage>
								</squarePoster>
							</items>
						</shelfSection>
					</sections>
				</shelf>
			</items>
		</scroller>
	</body>
</atv>
